        "name": "Launch Chrome",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:5500/main.html",
        "webRoot": "${workspaceFolder}/www"
    },
    {
        "name": "Launch Firefox",
        "request": "launch",
        "type": "firefox",
        "reAttach": true,
        "url": "http://localhost:5500/main.html",
        "webRoot": "${workspaceFolder}/www"
    },
    {
        "name": "Launch Chrome OSD",
        "request": "launch",
        "type": "chrome",
        "url": "http://localhost:5500/osd.html",
        "webRoot": "${workspaceFolder}/www"
    },
        {
            "name": "Python: server",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/HttpServer.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Python: server2",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/HttpServer_w2.py",
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
